{
  BufferedReader reader=new BufferedReader(new InputStreamReader(inputStream));
  try {
    while (true) {
      String line=reader.readLine();
      if (line == null)       break;
      function.apply(line);
    }
  }
 catch (  Exception e) {
    LOGGER.error("Failed to process " + errrorMessage + ": "+ e,e);
    throw e;
  }
 finally {
    Closeables.closeQuitely(reader);
  }
}
