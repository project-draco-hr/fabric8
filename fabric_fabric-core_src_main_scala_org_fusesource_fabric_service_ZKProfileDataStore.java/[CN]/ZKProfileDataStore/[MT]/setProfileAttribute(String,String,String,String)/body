{
  try {
    String path=ZkProfiles.getPath(version,profile);
    Properties props=ZooKeeperUtils.getProperties(zk,path);
    if (value != null) {
      props.setProperty(key,value);
    }
 else {
      props.remove(key);
    }
    ZooKeeperUtils.setProperties(zk,path,props);
  }
 catch (  Exception e) {
    throw new FabricException(e);
  }
}
