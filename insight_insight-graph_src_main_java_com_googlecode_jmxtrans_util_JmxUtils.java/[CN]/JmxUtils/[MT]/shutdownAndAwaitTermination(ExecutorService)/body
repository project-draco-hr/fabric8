{
  service.shutdown();
  try {
    if (!service.awaitTermination(60,TimeUnit.SECONDS)) {
      service.shutdownNow();
      if (!service.awaitTermination(60,TimeUnit.SECONDS)) {
        log.error("Pool did not terminate");
      }
    }
  }
 catch (  InterruptedException ie) {
    service.shutdownNow();
    Thread.currentThread().interrupt();
  }
}
