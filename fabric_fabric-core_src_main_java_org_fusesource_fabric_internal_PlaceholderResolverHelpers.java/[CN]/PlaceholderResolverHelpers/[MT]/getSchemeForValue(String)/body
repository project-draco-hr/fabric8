{
  Set<String> schemes=new HashSet<String>();
  Matcher matcher=SCHEME_PATTERN.matcher(value);
  while (matcher.find()) {
    String scheme=matcher.group(1);
    schemes.add(scheme);
    String remaining=matcher.group(2);
    if (remaining != null) {
      schemes.addAll(getSchemeForValue(remaining));
    }
  }
  return schemes;
}
