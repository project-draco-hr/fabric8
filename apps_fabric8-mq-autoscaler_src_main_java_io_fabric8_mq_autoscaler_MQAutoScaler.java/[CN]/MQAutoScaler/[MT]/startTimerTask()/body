{
  if (started.get()) {
    if (timerTask != null) {
      timerTask.cancel();
    }
    timerTask=new TimerTask(){
      @Override public void run(){
        LOG.info("Checking Load across Fabric8MQ group: " + getGroupName());
        validateMQLoad();
      }
    }
;
    long pollTime=getPollTime() * 1000;
    timer.schedule(timerTask,pollTime,pollTime);
  }
}
