{
  int lastIndex=paths.length - 1;
  if (index == lastIndex) {
    return paths[index];
  }
 else {
    StringBuilder builder=new StringBuilder();
    for (int i=index; i <= lastIndex; i++) {
      String path=paths[i];
      if (path == null) {
        path="";
      }
      if (builder.length() > 0) {
        builder.append("/");
      }
      builder.append(path);
    }
    return builder.toString();
  }
}
