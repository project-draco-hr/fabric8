{
switch (newState) {
case CONNECTED:
case RECONNECTED:
    executor.submit(new Runnable(){
      public void run(){
        if (shutdownTracker.attemptRetain()) {
          try {
            updateProcessId();
          }
  finally {
            shutdownTracker.release();
          }
        }
      }
    }
);
  break;
}
}
