{
  if (curator.checkExists().forPath(path) == null) {
    curator.setData().forPath(path,value != null ? value.getBytes(UTF_8) : null);
  }
 else {
    String data=getStringData(curator,path);
    if (data == null) {
      data="";
    }
    if (data.length() > 0) {
      data+=" ";
    }
    data+=value;
    curator.setData().forPath(path,data.getBytes(UTF_8));
  }
}
