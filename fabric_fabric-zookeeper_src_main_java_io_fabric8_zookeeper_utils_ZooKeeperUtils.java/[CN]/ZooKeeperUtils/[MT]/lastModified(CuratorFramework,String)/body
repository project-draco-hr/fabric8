{
  long lastModified=0;
  List<String> children=getChildren(curator,path);
  if (children.isEmpty()) {
    return exists(curator,path).getMtime();
  }
 else {
    for (    String child : children) {
      lastModified=Math.max(lastModified(curator,path + "/" + child),lastModified);
    }
  }
  return lastModified;
}
