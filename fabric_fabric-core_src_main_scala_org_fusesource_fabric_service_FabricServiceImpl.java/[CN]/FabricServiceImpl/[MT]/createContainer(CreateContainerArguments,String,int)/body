{
  Container[] containers=new Container[number];
  try {
    for (int i=0; i < number; i++) {
      String containerName=name;
      if (number > 1) {
        containerName+=i + 1;
      }
      containers[i]=createContainer(args,containerName);
    }
  }
 catch (  FabricException e) {
    throw e;
  }
catch (  Exception e) {
    throw new FabricException(e);
  }
  return containers;
}
