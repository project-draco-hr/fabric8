{
  processing.incrementAndGet();
  try {
    executor.execute(new Runnable(){
      @Override public void run(){
        try {
          doScan(path);
        }
  finally {
          processing.decrementAndGet();
synchronized (processing) {
            processing.notifyAll();
          }
        }
      }
    }
);
  }
 catch (  RejectedExecutionException e) {
    processing.decrementAndGet();
synchronized (processing) {
      processing.notifyAll();
    }
    throw e;
  }
}
