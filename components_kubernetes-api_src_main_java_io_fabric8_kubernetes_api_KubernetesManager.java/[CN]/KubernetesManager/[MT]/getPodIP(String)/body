{
  Map<String,PodSchema> podMap=KubernetesHelper.getPodMap(kubernetes);
  PodSchema pod=podMap.get(name);
  if (pod != null) {
    CurrentState currentState=pod.getCurrentState();
    if (currentState != null) {
      String podIP=currentState.getPodIP();
      if (podIP != null) {
        return podIP;
      }
    }
  }
  return null;
}
