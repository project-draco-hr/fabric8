{
  if (path != null) {
    while (path.startsWith("/")) {
      path=path.substring(1);
    }
  }
  if (path == null || path.length() == 0 || path.equals("/")) {
    if (zkPrefix.endsWith("/") && zkPrefix.length() > 1) {
      return zkPrefix.substring(0,zkPrefix.length() - 1);
    }
 else {
      return zkPrefix;
    }
  }
  return zkPrefix + path;
}
