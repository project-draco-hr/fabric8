{
  Profile result=null;
  for (long t=0; result == null && t < unit.toMillis(timeout); t+=200) {
    Profile[] profiles=container.getProfiles();
    for (    Profile aux : profiles) {
      if (name.equals(aux.getId())) {
        result=aux;
        break;
      }
    }
    Thread.sleep(200);
  }
  return result;
}
