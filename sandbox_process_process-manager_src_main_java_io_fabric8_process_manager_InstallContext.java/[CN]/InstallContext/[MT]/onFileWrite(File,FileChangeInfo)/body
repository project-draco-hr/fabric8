{
  if (updateMode) {
    if (oldChangeInfo != null) {
      FileChangeInfo changeInfo=FileChangeInfo.newInstance(target);
      if (!oldChangeInfo.equals(changeInfo)) {
        addRestartReason(target);
      }
      return changeInfo;
    }
 else     if (target.isFile() && target.exists()) {
      addRestartReason(target);
    }
  }
  return null;
}
