{
  if (service != null) {
    ServiceSpec spec=service.getSpec();
    if (spec != null) {
      String portalIP=spec.getClusterIP();
      if (portalIP != null) {
        Integer port=spec.getPorts().iterator().next().getPort();
        if (port != null && port > 0) {
          portalIP+=":" + port;
        }
        String protocol="http://";
        if (KubernetesHelper.isServiceSsl(spec.getClusterIP(),port,Utils.getSystemPropertyOrEnvVar(DefaultKubernetesClient.KUBERNETES_TRUST_CERT_SYSTEM_PROPERTY,false))) {
          protocol="https://";
        }
        return protocol + portalIP;
      }
    }
  }
  return null;
}
