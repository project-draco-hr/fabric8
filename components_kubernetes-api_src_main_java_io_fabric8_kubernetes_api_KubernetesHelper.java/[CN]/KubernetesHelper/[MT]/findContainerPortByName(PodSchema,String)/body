{
  List<ManifestContainer> containers=KubernetesHelper.getContainers(pod);
  for (  ManifestContainer container : containers) {
    List<Port> ports=container.getPorts();
    for (    Port port : ports) {
      if (Objects.equal(name,port.getName())) {
        return port;
      }
    }
  }
  return null;
}
