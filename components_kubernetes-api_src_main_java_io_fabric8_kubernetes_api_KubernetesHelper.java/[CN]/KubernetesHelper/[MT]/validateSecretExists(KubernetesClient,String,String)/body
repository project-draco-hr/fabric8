{
  Secret secret=null;
  try {
    secret=kubernetes.getSecret(secretName,namespace);
  }
 catch (  WebApplicationException e) {
    if (e.getResponse().getStatus() == 404) {
    }
 else {
      throw e;
    }
  }
  if (secret == null) {
    throw new IllegalArgumentException("No secret named: " + secretName + " for namespace "+ namespace+ " is available on Kubernetes at address "+ kubernetes.getAddress()+ ". For how to create secrets see: http://fabric8.io/guide/fabric8OnOpenShift.html#requirements ");
  }
 else {
    return secret;
  }
}
