{
  if (pod != null) {
    PodSpec spec=pod.getSpec();
    if (spec != null) {
      List<Container> containers=spec.getContainers();
      if (containers != null && containers.size() > 0) {
        Container container=containers.get(0);
        return getContainerEnvVar(container,envVarName);
      }
    }
  }
  return null;
}
