{
  BundleContext context=createMock(BundleContext.class);
  expect(context.getServiceReferences("org.apache.aries.blueprint.NamespaceHandler","(key=value)")).andReturn(someReferences());
  replay(context);
  assertTrue("Service is available",Services.isAvailable(context,"org.apache.aries.blueprint.NamespaceHandler",Services.createProperties("key","value")));
  verify(context);
}
