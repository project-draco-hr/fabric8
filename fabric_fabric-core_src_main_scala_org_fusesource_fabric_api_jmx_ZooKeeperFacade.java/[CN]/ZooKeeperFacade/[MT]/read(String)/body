{
  IZKClient zk=getZooKeeper();
  Stat exists=zk.exists(path);
  if (exists == null) {
    return null;
  }
  int numChildren=exists.getNumChildren();
  List<String> children=null;
  if (numChildren > 0) {
    children=zk.getChildren(path);
  }
  return new ZkContents(exists.getDataLength(),children);
}
