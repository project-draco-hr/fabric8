{
  String url=tree.getUrl();
  if (url == null) {
    throw new IllegalArgumentException("No Url supplied for " + tree);
  }
  if (url.startsWith("file:")) {
    url=url.substring("file:".length());
  }
  File file=new File(url);
  URL u;
  if (file.exists()) {
    u=file.toURI().toURL();
  }
 else {
    u=new URL(url);
  }
  return u;
}
