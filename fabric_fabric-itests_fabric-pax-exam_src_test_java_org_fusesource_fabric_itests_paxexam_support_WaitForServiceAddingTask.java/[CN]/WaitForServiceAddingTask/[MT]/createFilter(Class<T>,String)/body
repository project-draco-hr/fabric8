{
  String flt;
  if (filter != null) {
    if (filter.startsWith("(")) {
      flt="(&(" + Constants.OBJECTCLASS + "="+ type.getName()+ ")"+ filter+ ")";
    }
 else {
      flt="(&(" + Constants.OBJECTCLASS + "="+ type.getName()+ ")("+ filter+ "))";
    }
  }
 else {
    flt="(" + Constants.OBJECTCLASS + "="+ type.getName()+ ")";
  }
  return FrameworkUtil.createFilter(flt);
}
