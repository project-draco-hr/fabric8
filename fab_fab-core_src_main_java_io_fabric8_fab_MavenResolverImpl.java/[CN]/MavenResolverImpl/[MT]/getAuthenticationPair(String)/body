{
  try {
    URL url=new URL(text);
    String authority=url.getUserInfo();
    if (Strings.notEmpty(authority)) {
      String[] parts=authority.split(":");
      if (parts.length == 2) {
        return parts;
      }
    }
  }
 catch (  MalformedURLException e) {
    LOGGER.warn("{} does not look like a valid repository URL");
  }
  return null;
}
