{
  String result;
  if (bindAddress.getAddress().isAnyLocalAddress()) {
    try {
      result=InetAddress.getLocalHost().getCanonicalHostName();
    }
 catch (    UnknownHostException e) {
      result="localhost";
    }
  }
 else {
    result=bindAddress.getAddress().getCanonicalHostName();
  }
  return result;
}
