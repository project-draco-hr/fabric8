{
  for (  File f : directory.listFiles()) {
    if (f.isDirectory()) {
      loadDirectory(f,err,local);
    }
 else {
      if (f.getName().endsWith(".fmd")) {
        try {
          FileInputStream is=new FileInputStream(f);
          try {
            load(local ? f : null,is);
          }
  finally {
            is.close();
          }
        }
 catch (        IOException e) {
          err.println("Error loading fab module descriptor '" + f + "': "+ e);
        }
      }
    }
  }
}
