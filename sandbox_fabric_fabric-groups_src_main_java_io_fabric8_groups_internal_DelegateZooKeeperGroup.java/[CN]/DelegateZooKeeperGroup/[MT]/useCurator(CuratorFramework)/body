{
  Group<T> group=this.group;
  if (group != null) {
    closeQuietly(group);
  }
  if (curator != null) {
    group=createGroup(curator,path,clazz);
    group.update(state);
    for (    GroupListener<T> listener : listeners) {
      group.add(listener);
    }
    if (started.get()) {
      group.start();
    }
    this.group=group;
  }
}
