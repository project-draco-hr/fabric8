{
  Feature feature=createMockFeatureWithOptionalBundles("feature-a","mvn:required/bundle/1.0","mvn:optional/bundle1/1.0","mvn:optional/bundle1/1.0");
  List<String> required=Features.getRequiredLocations(feature);
  assertEquals(1,required.size());
  assertTrue(required.contains("mvn:required/bundle/1.0"));
}
