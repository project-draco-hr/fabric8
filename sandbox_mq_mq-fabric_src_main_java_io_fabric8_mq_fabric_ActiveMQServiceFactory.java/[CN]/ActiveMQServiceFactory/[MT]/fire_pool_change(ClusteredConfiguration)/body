{
  (new Thread(){
    @Override public void run(){
synchronized (ActiveMQServiceFactory.this) {
        for (        ClusteredConfiguration c : configurations.values()) {
          if (c != cc && c != null && c.pool != null && c.pool.equals(cc.pool)) {
            c.update_pool_state();
          }
        }
      }
    }
  }
).start();
}
