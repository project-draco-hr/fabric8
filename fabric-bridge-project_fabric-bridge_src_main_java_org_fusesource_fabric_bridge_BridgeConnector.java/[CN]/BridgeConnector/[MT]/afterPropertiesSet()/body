{
  if (localBrokerConfig == null) {
    throw new IllegalArgumentException("The property localBrokerConfig is required");
  }
  if (outboundDestinations == null && inboundDestinations == null) {
    throw new IllegalArgumentException("At least one of inboundDestinations or outboundDestinations property must be provided");
  }
  if (inboundDestinations != null && !StringUtils.hasText(inboundDestinations.getDispatchPolicy().getMessageSelector())) {
    LOG.warn("NOTE: Inbound destinations do not use a message selector, " + "this configuration only works with a single BridgeConnector connected to another BridgeConnector or GatewayConnector");
  }
}
