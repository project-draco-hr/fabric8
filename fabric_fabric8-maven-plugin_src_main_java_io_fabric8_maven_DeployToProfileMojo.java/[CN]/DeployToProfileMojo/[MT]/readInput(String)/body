{
  while (true) {
    BufferedReader reader=new BufferedReader(new InputStreamReader(System.in));
    System.out.print(prompt);
    try {
      String line=reader.readLine();
      if (line != null && Strings.isNotBlank(line)) {
        return line;
      }
    }
 catch (    IOException e) {
      getLog().warn("Failed to read input: " + e,e);
    }
  }
}
