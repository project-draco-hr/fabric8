{
  if (event.getType() == FrameworkEvent.PACKAGES_REFRESHED) {
synchronized (refreshLock) {
      refreshLock.notifyAll();
    }
  }
  if (event.getType() == FrameworkEvent.ERROR) {
    LOGGER.error("Framework error",event.getThrowable());
synchronized (refreshLock) {
      refreshLock.notifyAll();
    }
  }
}
