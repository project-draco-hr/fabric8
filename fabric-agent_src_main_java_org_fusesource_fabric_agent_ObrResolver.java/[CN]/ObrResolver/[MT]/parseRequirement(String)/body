{
  int p=req.indexOf(':');
  String name;
  String filter;
  if (p > 0) {
    name=req.substring(0,p);
    filter=req.substring(p + 1);
  }
 else {
    if (req.contains("package")) {
      name="package";
    }
 else     if (req.contains("service")) {
      name="service";
    }
 else {
      name="bundle";
    }
    filter=req;
  }
  if (!filter.startsWith("(")) {
    filter="(" + filter + ")";
  }
  return repositoryAdmin.getHelper().requirement(name,filter);
}
