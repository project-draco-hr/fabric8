{
  updateConfiguration(configuration);
  activateComponent();
  if (mbeanServer != null) {
    objectName=new ObjectName("io.fabric:type=OpenShift");
    mbean=new OpenShiftFacade(this);
    if (!mbeanServer.isRegistered(objectName)) {
      mbeanServer.registerMBean(mbean,objectName);
    }
  }
}
