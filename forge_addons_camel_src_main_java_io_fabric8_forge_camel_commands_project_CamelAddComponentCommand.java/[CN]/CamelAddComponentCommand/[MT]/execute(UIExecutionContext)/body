{
  Project project=getSelectedProject(context);
  Dependency core=findCamelCoreDependency(project);
  if (core == null) {
    return Results.fail("The project does not include camel-core");
  }
  ComponentDto dto=name.getValue();
  if (dto != null) {
    DependencyBuilder component=DependencyBuilder.create().setGroupId(dto.getGroupId()).setArtifactId(dto.getArtifactId()).setVersion(core.getCoordinate().getVersion());
    dependencyInstaller.install(project,component);
    return Results.success("Added Camel component " + dto.getScheme() + " ("+ dto.getArtifactId()+ ") to the project");
  }
 else {
    return Results.fail("Unknown Camel component");
  }
}
