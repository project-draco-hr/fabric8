{
  Container container=fabricService.getCurrentContainer();
  if (container != null) {
    Set<Query> newQueries=new HashSet<Query>();
    Profile[] profiles=container.getProfiles();
    if (profiles != null) {
      for (      Profile profile : profiles) {
        loadProfile(profile,newQueries);
      }
    }
    for (    Query q : queries.keySet()) {
      if (!newQueries.remove(q)) {
        queries.remove(q).cancel(false);
      }
    }
    Server server=new Server(container.getId());
    for (    Query q : newQueries) {
      long delay=q.getPeriod() > 0 ? q.getPeriod() : defaultDelay;
      ScheduledFuture<?> future=this.executor.scheduleAtFixedRate(new Task(server,q),Math.round(Math.random() * 1000),delay * 1000,TimeUnit.MILLISECONDS);
      queries.put(q,future);
    }
  }
}
