{
  activateComponent(context);
  try {
    if (!localRepo.exists() && !localRepo.mkdirs()) {
      throw new IOException("Failed to create local repository");
    }
    git=openOrInit(localRepo);
  }
 catch (  IOException ex) {
    deactivateComponent();
    throw ex;
  }
catch (  RuntimeException rte) {
    deactivateComponent();
    throw rte;
  }
}
