{
  if (schema == null) {
    SchemaFactory schemaFactory=SchemaFactory.newInstance(XMLConstants.W3C_XML_SCHEMA_NS_URI);
    try {
      schema=schemaFactory.newSchema(sources);
    }
 catch (    SAXException e) {
      LOG.error("Could not parse BAI schemas. Reason: " + e,e);
    }
  }
  return schema;
}
