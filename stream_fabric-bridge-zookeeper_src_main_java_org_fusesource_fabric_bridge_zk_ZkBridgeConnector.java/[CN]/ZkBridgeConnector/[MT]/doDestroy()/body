{
  try {
    super.doDestroy();
  }
 catch (  Exception e) {
    LOG.warn("Error destroying Bridge: " + e.getMessage(),e);
  }
  if (container != null) {
    if (this.connected) {
      ZkConfigHelper.removeBridge(zooKeeper,container);
    }
 else {
      LOG.error("Bridge disconnected from Fabric Zookeeper service, " + "unable to remove Bridge runtime configuration");
    }
  }
}
