{
  assertValid();
  try {
    if (flag) {
      setData(getCurator(),ZkPath.CONTAINER_ALIVE.getPath(id),"alive");
    }
 else {
      deleteSafe(getCurator(),ZkPath.CONTAINER_ALIVE.getPath(id));
    }
  }
 catch (  KeeperException.NoNodeException e) {
  }
catch (  Exception e) {
    throw FabricException.launderThrowable(e);
  }
}
