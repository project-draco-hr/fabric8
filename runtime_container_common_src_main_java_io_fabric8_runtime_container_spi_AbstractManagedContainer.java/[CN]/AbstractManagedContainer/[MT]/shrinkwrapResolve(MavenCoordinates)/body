{
  File[] resolved=Maven.resolver().resolve(artefact.toString()).withoutTransitivity().asFile();
  if (resolved == null || resolved.length == 0)   throw new IllegalStateException("Cannot obtain maven artefact: " + artefact);
  if (resolved.length > 1)   throw new IllegalStateException("Multiple maven artefacts for: " + artefact);
  return resolved[0];
}
