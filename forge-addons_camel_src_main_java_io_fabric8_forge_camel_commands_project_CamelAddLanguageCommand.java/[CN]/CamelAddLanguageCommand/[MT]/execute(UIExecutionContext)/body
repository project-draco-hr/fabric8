{
  Project project=getSelectedProject(context);
  Dependency core=findCamelCoreDependency(project);
  if (core == null) {
    return Results.fail("The project does not include camel-core");
  }
  String artifactId=findLanguageArchetype(name.getValue());
  if (artifactId == null) {
    return Results.fail("Camel language " + name.getValue() + " is unknown.");
  }
  DependencyBuilder component=DependencyBuilder.create().setGroupId("org.apache.camel").setArtifactId(artifactId).setVersion(core.getCoordinate().getVersion());
  dependencyInstaller.install(project,component);
  return Results.success("Added Camel language " + name.getValue() + " to the project");
}
