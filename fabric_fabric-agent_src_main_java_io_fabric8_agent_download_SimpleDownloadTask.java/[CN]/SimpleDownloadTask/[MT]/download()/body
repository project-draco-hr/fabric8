{
  File dir=new File(System.getProperty("karaf.data"),"fabric-agent");
  dir.mkdirs();
  File tmpFile=File.createTempFile("download-",null,dir);
  InputStream is=new URL(url).openStream();
  try {
    OutputStream os=new FileOutputStream(tmpFile);
    try {
      copy(is,os);
    }
  finally {
      os.close();
    }
  }
  finally {
    is.close();
  }
  return tmpFile;
}
